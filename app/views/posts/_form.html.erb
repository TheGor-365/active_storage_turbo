<div class="shadow rounded p-5">
  <%= form_with(model: post) do |form| %>
    <% if post.errors.any? %>
      <p><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</p>
      <% post.errors.each do |error| %>
        <p><%= error.full_message %></p>
      <% end %>
    <% end %>

    <div>
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div>
      <%= form.label :body, class: 'form-label' %>
      <%= form.text_area :body, class: 'form-control' %>
    </div>

    <div class="my-3 col-3">
      <%= form.label :video, class: 'form-label' %>
      <%= form.file_field :video, class: 'form-control' %>
    </div>

    <div>
      <%= form.submit class: 'btn btn-outline-success btn-sm' %>
    </div>
  <% end %>
</div>
